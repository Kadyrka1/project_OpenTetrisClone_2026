#include <FastLED.h>

#define NUM_LEDS 100
#define DATA_PIN 23
CRGB leds[NUM_LEDS];
bool stripInitialized = false;

// Initialize the LED strip (call this first)
void initLEDStrip() {
  FastLED.addLeds<WS2812B, DATA_PIN, GRB>(leds, NUM_LEDS);
  FastLED.setBrightness(50);
  FastLED.clear();
  FastLED.show();
  stripInitialized = true;
}

// Simple function to light a specific LED
void lightThisLED(int ledIndex, int red, int green, int blue) {
  if (!stripInitialized) {
    initLEDStrip();
  }
  
  if (ledIndex >= 0 && ledIndex < NUM_LEDS) {
    leds[ledIndex] = CRGB(red, green, blue);
    FastLED.show();
  }
}

void setup() {
  // Initialize once
  initLEDStrip();
}

void loop() {
  // Simple usage - just specify LED number and color
  lightThisLED(0, 255, 0, 0);    // LED 0 = Red
  delay(200);

  lightThisLED(1, 255, 127, 0);    
  delay(200);

  lightThisLED(2, 255, 255, 0);    
  delay(200);

  lightThisLED(3, 127, 255, 0);    // LED 0 = Blue
  delay(200);

  lightThisLED(4, 0, 255, 0);    
  delay(200);

  lightThisLED(5, 0, 255, 255);    
  delay(200);

  lightThisLED(6, 0, 0, 255);    // LED 0 = Green
  delay(200);

  lightThisLED(7, 127, 0, 255);    
  delay(200);

  lightThisLED(8, 255, 0, 255);  
  delay(200);

  lightThisLED(9, 255, 255, 255);    
  delay(2000);

  
  lightThisLED(0, 0, 0, 0);
  delay(200);
  lightThisLED(1, 0, 0, 0);
  delay(200);
  lightThisLED(2, 0, 0, 0);
  delay(200);
  lightThisLED(3, 0, 0, 0);
  delay(200);
  lightThisLED(4, 0, 0, 0);
  delay(200);
  lightThisLED(5, 0, 0, 0);
  delay(200);
  lightThisLED(6, 0, 0, 0);
  delay(200);
  lightThisLED(7, 0, 0, 0);
  delay(200);
  lightThisLED(8, 0, 0, 0);
  delay(200);
  lightThisLED(9, 0, 0, 0);
  delay(1000);
  
}
